{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": ".tmp/tsconfig.esm.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "../dist/esm",
    "target": "ES2020",
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["test", "**/*.test.*", "**/*.stories.*", "tsconfig.*"]
}
