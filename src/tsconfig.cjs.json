{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": ".tmp/tsconfig.cjs.tsbuildinfo",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "../dist/cjs",
    "target": "ES2020",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "test",
    "**/*.test.*",
    "**/*.stories.*",
    "tsconfig.*"
  ]
}
